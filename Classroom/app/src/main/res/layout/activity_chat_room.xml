<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@color/yellow"
    android:orientation="vertical"
    tools:context=".ChatRoomActivity">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:background="@color/green"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="58dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:src="@drawable/back"
            android:padding="10dp"
            android:paddingLeft="0dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/currname"
            android:text="NAME"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:transitionName="txt1Trans"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/currprofile"
            android:layout_width="48dp"
            android:layout_marginRight="6dp"
            android:padding="5dp"
            android:transitionName="imageview1Trans"
            android:layout_height="48dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:id="@+id/linear"
        android:orientation="vertical">
        <TextView
            android:id="@+id/downloading"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:text="Downloading..."
            android:background="@color/transparent"
            android:layout_gravity="right"
            android:gravity="right"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <ListView
                android:id="@+id/listview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:divider="@null"
                android:transcriptMode="alwaysScroll"
                android:stackFromBottom="true"
                android:dividerHeight="0dp"
                android:background="@color/yellow"
                android:padding="0dp"
                android:choiceMode="none"
                android:layout_weight="1"/>
            <ProgressBar
                android:id="@+id/progress"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/imageview1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center|bottom"
                android:background="@color/semi_transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/default_image" />

            <VideoView
                android:id="@+id/videoview"
                android:layout_gravity="center|bottom"
                android:layout_width="150dp"
                android:background="@color/semi_transparent"
                android:layout_height="150dp"/>
            <TextView
                android:id="@+id/textview1"
                android:background="@color/semi_transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:textStyle="bold"
                android:textSize="14dp"
                android:text="File Size: "/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/attachex"
            android:background="@color/semi_transparent"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:gravity="center"
            android:layout_height="90dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/UI_cardview1"
                android:layout_width="80dp"
                android:backgroundTint="@color/semi_transparent"
                android:layout_height="80dp"
                app:cardElevation="30dp"
                android:layout_gravity="center"
                android:padding="12dp"
                android:layout_marginRight="50dp"
                app:cardCornerRadius="15dp"
                >
                <ImageView
                    android:id="@+id/attachment"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:src="@drawable/file"
                    android:scaleType="fitCenter"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/UI_cardview2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/semi_transparent"
                app:cardElevation="30dp"
                android:layout_gravity="center"
                android:padding="12dp"
                app:cardCornerRadius="15dp"
                >
                <ImageView
                    android:id="@+id/camera"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/camera"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:scaleType="fitCenter"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="0dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/UI_cardview3"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="20dp"
                android:padding="12dp"
                android:layout_weight="1"
                app:cardCornerRadius="15dp"
                >

                <EditText
                    android:id="@+id/edittext1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:hint="Type a message"
                    android:backgroundTint="@color/black"
                    android:textColorHint="@color/white"/>


            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/attach"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/stationery"
                android:scaleType="fitCenter"/>

            <ImageView
                android:id="@+id/button1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:src="@drawable/send"
                android:background="@drawable/custom_progress_bar_bg"
                android:textSize="14sp"
                android:textColor="#000000"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
